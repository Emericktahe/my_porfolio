---

<section class="text-[var(--white)] py-20" id="skills">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-16">
      Langages & <span class="text-[var(--sec)]">Outils</span>
    </h2>
    
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 md:gap-6">
      {skillCategories.map((category, categoryIndex) => (
        <div class={`group relative rounded-2xl p-4 transition-all duration-500 hover:shadow-2xl ${category.hoverShadow}`}>
          <div class="flex items-center gap-2 mb-4">
            <div class={`w-8 h-8 bg-gradient-to-r ${category.gradient} rounded-lg flex items-center justify-center flex-shrink-0`}>
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d={category.icon}/>
              </svg>
            </div>
            <h3 class={`text-base font-bold bg-gradient-to-r ${category.textGradient} bg-clip-text text-transparent truncate`}>
              {category.title}
            </h3>
          </div>
          
          <div class="grid grid-cols-2 gap-2">
            {category.technologies.map((tech, index) => (
              <div 
                class="flex flex-col items-center gap-1.5 p-2 rounded-lg bg-[#ffffff05] hover:bg-[#ffffff10] border border-[#ffffff05] hover:border-[#ffffff15] transition-all duration-300 animate-fade-in"
                style={`animation-delay: ${(categoryIndex * 0.2) + (index * 0.1)}s`}
              >
                <img
                  src={`/svg/${tech}.svg`}
                  alt={tech}
                  class="h-6 w-6 object-contain opacity-80 group-hover:opacity-100 transition-opacity duration-300"
                  width="24"
                  height="24"
                  loading="lazy"
                />
                <span class="text-[10px] font-medium text-[var(--white-icon)] group-hover:text-white transition-colors duration-300 text-center leading-tight">
                  {tech.charAt(0).toUpperCase() + tech.slice(1)}
                </span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    opacity: 0;
    animation: fade-in 0.6s ease-out forwards;
  }
</style>
