---
import { Image } from "astro:assets";
import svgl from "../../public/svgl.png";
import stockin from "../../public/stockin.png";
import moviesfordevs from "../../public/moviesfordevs.png";
import velez from "../../public/velez.png";

interface Project {
  title: string;
  image: ImageMetadata;
  link: string;
  preview: string;
  status: string;
  category: string;
  tech: string[];
}

const projects: Project[] = [
  {
    title: "MoviesForDevs",
    image: moviesfordevs as ImageMetadata,
    link: "https://github.com/gothsec/MoviesForDevs",
    preview: "https://movies-for-devs.vercel.app",
    status: "Deployed",
    category: "Frontend",
    tech: ["React", "Next.js", "TypeScript"]
  },
  {
    title: "StockIn",
    image: stockin as ImageMetadata,
    link: "https://github.com/gothsec/stockin-demo",
    preview: "https://stockin-demo.vercel.app",
    status: "On Development",
    category: "Backend",
    tech: ["Node.js", "Express", "MongoDB"]
  },
  {
    title: "Svgl.app",
    image: svgl as ImageMetadata,
    link: "https://github.com/pheralb/svgl",
    preview: "https://svgl.app",
    status: "Contributor",
    category: "Frontend",
    tech: ["Astro", "TypeScript", "Tailwind"]
  },
  {
    title: "Rifas Velez Web",
    image: velez as ImageMetadata,
    link: "https://github.com/Buga-Software/rifasvelez-web",
    preview: "https://www.rifasvelez.com",
    status: "Deployed",
    category: "Backend",
    tech: ["PHP", "Laravel", "MySQL"]
  },
];

const frontendProjects = projects.filter(p => p.category === "Frontend");
const backendProjects = projects.filter(p => p.category === "Backend");
---

<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Mes Realisations</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-12">Projets</h3>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        {
          frontendProjects.map((project) => (
            <div class="group relative bg-gradient-to-br from-[#1a1a1a] to-[#0f0f0f] rounded-3xl p-6 border border-[#ffffff08] hover:border-[#ffffff15] transition-all duration-500 hover:shadow-2xl hover:shadow-blue-500/10">
              <div class="relative overflow-hidden rounded-2xl mb-6">
                <Image
                  src={project.image}
                  alt={project.title}
                  class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>
              
              <div class="space-y-4">
                <div class="flex items-start justify-between">
                  <h5 class="text-xl font-bold text-white group-hover:text-blue-400 transition-colors">{project.title}</h5>
                  <span class={`px-3 py-1 rounded-full text-xs font-medium ${
                    project.status === 'Deployed' ? 'bg-green-500/20 text-green-400 border border-green-500/30' :
                    project.status === 'On Development' ? 'bg-yellow-500/20 text-yellow-400 border border-yellow-500/30' :
                    'bg-blue-500/20 text-blue-400 border border-blue-500/30'
                  }`}>
                    {project.status}
                  </span>
                </div>
                
                <div class="flex flex-wrap gap-2">
                  {project.tech.map((tech) => (
                    <span class="px-2 py-1 bg-[#ffffff08] text-[var(--white-icon)] text-xs rounded-lg border border-[#ffffff05]">
                      {tech}
                    </span>
                  ))}
                </div>
                
                <div class="flex gap-3 pt-2">
                  <a
                    href={project.link}
                    target="_blank"
                    class="flex-1 flex items-center justify-center gap-2 py-3 px-4 bg-[#ffffff08] hover:bg-[#ffffff15] border border-[#ffffff10] hover:border-[#ffffff20] rounded-xl transition-all duration-300 text-sm font-medium"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"/>
                    </svg>
                    Code
                  </a>
                  <a
                    href={project.preview}
                    target="_blank"
                    class="flex-1 flex items-center justify-center gap-2 py-3 px-4 bg-blue-500/20 hover:bg-blue-500/30 border border-blue-500/30 hover:border-blue-500/50 rounded-xl transition-all duration-300 text-sm font-medium text-blue-400"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z"/>
                    </svg>
                    Live
                  </a>
                </div>
              </div>
            </div>
          ))
        }
      </div>
      <br>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        {
          backendProjects.map((project) => (
            <div class="group relative bg-gradient-to-br from-[#1a1a1a] to-[#0f0f0f] rounded-3xl p-6 border border-[#ffffff08] hover:border-[#ffffff15] transition-all duration-500 hover:shadow-2xl hover:shadow-green-500/10">
              <div class="relative overflow-hidden rounded-2xl mb-6">
                <Image
                  src={project.image}
                  alt={project.title}
                  class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>
              
              <div class="space-y-4">
                <div class="flex items-start justify-between">
                  <h5 class="text-xl font-bold text-white group-hover:text-green-400 transition-colors">{project.title}</h5>
                  <span class={`px-3 py-1 rounded-full text-xs font-medium ${
                    project.status === 'Deployed' ? 'bg-green-500/20 text-green-400 border border-green-500/30' :
                    project.status === 'On Development' ? 'bg-yellow-500/20 text-yellow-400 border border-yellow-500/30' :
                    'bg-blue-500/20 text-blue-400 border border-blue-500/30'
                  }`}>
                    {project.status}
                  </span>
                </div>
                
                <div class="flex flex-wrap gap-2">
                  {project.tech.map((tech) => (
                    <span class="px-2 py-1 bg-[#ffffff08] text-[var(--white-icon)] text-xs rounded-lg border border-[#ffffff05]">
                      {tech}
                    </span>
                  ))}
                </div>
                
                <div class="flex gap-3 pt-2">
                  <a
                    href={project.link}
                    target="_blank"
                    class="flex-1 flex items-center justify-center gap-2 py-3 px-4 bg-[#ffffff08] hover:bg-[#ffffff15] border border-[#ffffff10] hover:border-[#ffffff20] rounded-xl transition-all duration-300 text-sm font-medium"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"/>
                    </svg>
                    Code
                  </a>
                  <a
                    href={project.preview}
                    target="_blank"
                    class="flex-1 flex items-center justify-center gap-2 py-3 px-4 bg-green-500/20 hover:bg-green-500/30 border border-green-500/30 hover:border-green-500/50 rounded-xl transition-all duration-300 text-sm font-medium text-green-400"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z"/>
                    </svg>
                    Live
                  </a>
                </div>
              </div>
            </div>
          ))
        }
      </div>

    <a
      target="_blank"
      href="https://github.com/Gothsec?tab=repositories"
      aria-label="GitHub"
      class="w-full flex items-center justify-center gap-2 mt-9 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)] hover:scale-105"
    >
      <span class="md:text-lg text-md">More projects on</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="size-6"
      >
        <path
          d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
